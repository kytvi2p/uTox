diff --git a/Makefile b/Makefile
index 7b38786..6d12d39 100644
--- a/Makefile
+++ b/Makefile
@@ -15,6 +15,9 @@ CFLAGS += $(shell pkg-config --cflags $(DEPS))
 LDFLAGS = -pthread -lm
 LDFLAGS += $(shell pkg-config --libs $(DEPS))
 
+CFLAGS += $(shell dpkg-buildflags --get CFLAGS)
